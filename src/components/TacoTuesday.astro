    <div class="max-w-4xl mx-auto text-center pb-8 md:pb-12">
      <h2 class="h2 mb-4 dark:text-white text-black">{title}</h2>
      <div class="text-xl text-neutral-700 dark:text-neutral-400"><slot /></div>
    </div>
  </div>
</section>
